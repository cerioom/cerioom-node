{
    "version": "0.0.25",
    "npmClient": "npm",
    "ci": false,
    "useWorkspaces": true,
    "packages": [
        "packages/*"
    ],
    "command": {
        "publish": {
            "message": "chore(release): publish %s",
            "conventionalCommits": true,
            "createRelease": "github",
            "allowBranch": [
                "master",
                "feat/*"
            ]
        },
        "bootstrap": {
            "hoist": true
        }
    },
    "ignoreChanges": [
        "**/changelog.md",
        "**/CHANGELOG.md",
        "**/package-lock.json",
        "**/yarn.lock",
        "**/*.test.*",
        "lerna.json",
        "README.md",
        "readme.md"
    ]
}
